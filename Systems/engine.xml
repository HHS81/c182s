<PropertyList>

    <!-- ============================================================== -->
    <!-- Fuel contamination and low oil level                           -->
    <!-- ============================================================== -->

    <logic>
        <name>Engine Killed</name>
        <input>
            <or>
                <property>/engines/engine[0]/crashed</property>
                <property>/engines/engine[0]/kill-engine</property>

                <!-- Engine is killed if fuel contamination is higher than 0.2 on a selected tank -->
                <!-- (but only if complex engine model is requested!) -->
                <and>
                    <property>/engines/engine/complex-engine-procedures</property>
                    <property>/engines/engine/allow-fuel-contamination</property>
                    
                    <or>
                        <!-- left wing tank contaminated -->
                        <and>
                            <or>
                                <!-- fuel selector: 0=off, 1=right, 2=both, 3=left -->
                                <equals>
                                    <property>/controls/switches/fuel_tank_selector</property>
                                    <value>3</value>
                                </equals>
                                <equals>
                                    <property>/controls/switches/fuel_tank_selector</property>
                                    <value>2</value>
                                </equals>
                            </or>
                            <greater-than>
                                <property>/consumables/fuel/tank[0]/water-contamination</property>
                                <value>0.2</value>
                            </greater-than>
                        </and>
                        
                        <!-- right wing tank contaminated -->
                        <and>
                            <or>
                                <!-- fuel selector: 0=off, 1=right, 2=both, 3=left -->
                                <equals>
                                    <property>/controls/switches/fuel_tank_selector</property>
                                    <value>1</value>
                                </equals>
                                <equals>
                                    <property>/controls/switches/fuel_tank_selector</property>
                                    <value>2</value>
                                </equals>
                            </or>
                            <greater-than>
                                <property>/consumables/fuel/tank[1]/water-contamination</property>
                                <value>0.2</value>
                            </greater-than>
                        </and>
                        
                        <!-- TODO: fuel reservoir not simulated yet -->
                        
                        <!-- fuel strainer sump contaminated -->
                        <greater-than>
                            <property>/consumables/fuel/tank[2]/water-contamination</property>
                            <value>0.2</value>
                        </greater-than>
                        
                        <!-- fuel strainer sump contaminated -->
                        <greater-than>
                            <property>/consumables/fuel/tank[2]/water-contamination</property>
                            <value>0.2</value>
                        </greater-than>
                        
                    </or>
                </and>
                
                
                <!-- Engine is killed if oil level is too low -->
                <!-- REPLACED BY FRICTION SIMULATION; see propulsion.xml
                <and>
                    <property>/engines/engine/complex-engine-procedures</property>
                    <property>/engines/engine/allow-oil-management</property>
                    <less-than>
                        <property>/engines/engine[0]/oil-level</property>
                        <value>3.97</value>
                    </less-than>
                </and>
                -->

            </or>
        </input>
        <output>
            <property>/engines/engine[0]/killed</property>
        </output>
    </logic>

    
    <!-- Low level of fuel contamination or just above oil minimal level makes engine cough-->
    <logic>
        <name>Engine Coughing</name>
        <input>
            <or>
                <!-- Engine is killed if fuel contamination is higher than 0.2 on a selected tank -->
                <!-- (but only if complex engine model is requested!) -->
                <and>
                    <property>/engines/engine/complex-engine-procedures</property>
                    <property>/engines/engine/allow-fuel-contamination</property>
                    
                    <or>
                        <!-- left wing tank contaminated -->
                        <and>
                            <or>
                                <!-- fuel selector: 0=off, 1=right, 2=both, 3=left -->
                                <equals>
                                    <property>/controls/switches/fuel_tank_selector</property>
                                    <value>3</value>
                                </equals>
                                <equals>
                                    <property>/controls/switches/fuel_tank_selector</property>
                                    <value>2</value>
                                </equals>
                            </or>
                            <greater-than>
                                <property>/consumables/fuel/tank[0]/water-contamination</property>
                                <value>0.0</value>
                            </greater-than>
                        </and>
                        
                        <!-- right wing tank contaminated -->
                        <and>
                            <or>
                                <!-- fuel selector: 0=off, 1=right, 2=both, 3=left -->
                                <equals>
                                    <property>/controls/switches/fuel_tank_selector</property>
                                    <value>1</value>
                                </equals>
                                <equals>
                                    <property>/controls/switches/fuel_tank_selector</property>
                                    <value>2</value>
                                </equals>
                            </or>
                            <greater-than>
                                <property>/consumables/fuel/tank[1]/water-contamination</property>
                                <value>0.0</value>
                            </greater-than>
                        </and>
                        
                        <!-- TODO: fuel reservoir not simulated yet -->
                        
                        <!-- fuel strainer sump contaminated -->
                        <greater-than>
                            <property>/consumables/fuel/tank[2]/water-contamination</property>
                            <value>0.0</value>
                        </greater-than>
                        
                        <!-- fuel strainer sump contaminated -->
                        <greater-than>
                            <property>/consumables/fuel/tank[3]/water-contamination</property>
                            <value>0.0</value>
                        </greater-than>
                        
                    </or>
                    
                </and>
                    
                <!-- Engine is coughing if friction is critical -->
                <and>
                    <property>/engines/engine/complex-engine-procedures</property>
                    <property>/fdm/jsbsim/systems/propulsion/friction-critical</property>
                </and>
                
                <!-- Engine is coughing if still cold and throttle is wide open -->
                <and>
                    <property>/engines/engine/complex-engine-procedures</property>
                    <property>/engines/engine/allow-oil-management</property>
                    <not><property>/sim/start-state-internal/oil-temp-override</property></not>
                    <greater-than>
                        <property>/controls/engines/engine[0]/throttle</property>
                        <value>0.65</value>
                    </greater-than>
                    <less-than>
                        <property>/engines/engine/oil-final-temperature-degf</property>
                        <value>70</value>
                    </less-than>
                </and>
                
                <!-- Engine is coughing shortly before it starves of fuel -->
                <and>
                    <property>/engines/engine/running</property>
                    <less-than>
                        <property>/consumables/fuel/tank[5]/level-lbs</property>
                        <property>/engines/engine/engine-cough-low-fuel-limit</property>
                    </less-than>
                </and>
                
            </or>
                
        </input>
        <output>
            <property>/engines/engine[0]/coughing</property>
        </output>
    </logic>
    
    <!-- Detect critical friction levels damaging/killing the engine (and already causing smoke etc.) -->
    <flipflop>
        <name>friction-critical</name>
        <type>monostable</type>
        <inverted type="bool">true</inverted>
        <S>
            <not>
                <or>
                    <and>
                        <!-- running engine: evaluate real friction -->
                        <property>/engines/engine/running</property>
                        <greater-than-equals>
                            <property>/fdm/jsbsim/systems/propulsion/friction-summer</property>
                            <value>50</value> <!-- friction limit to tolerate not anymore-->
                        </greater-than-equals>
                    </and>
                    <and>
                        <!-- stopped engine: see if we had critical friction and are not repairing -->
                        <property>/fdm/jsbsim/systems/propulsion/friction-critical</property>
                        <not><property>/fdm/jsbsim/damage/repairing</property></not>
                    </and>
                </or>
            </not>
        </S>
        <time>
            <value>65.0</value> <!-- time in seconds to tolerate critical friction limits with no permanent harm -->
        </time>
        <output>
            <property>/fdm/jsbsim/systems/propulsion/friction-critical</property>
        </output>
    </flipflop>
    
    <!-- Detect critical friction level causing killed enginge (interwired in propulsion.xml) -->
    <flipflop>
        <name>friction-is-killing-engine</name>
        <type>monostable</type>
        <inverted type="bool">true</inverted>
        <S>  <not><property>/fdm/jsbsim/systems/propulsion/friction-critical</property></not>  </S>
        <time>
            <value>18.0</value> <!-- how many seconds the engine still survives at critical friction levels (non recoverable already) -->
        </time>
        <output>
            <property>/fdm/jsbsim/systems/propulsion/friction-iskillingengine</property>
        </output>
    </flipflop>
    
    
    <!-- Oil temperature -->
    <!-- chain is: jsbsim modified value, low oil effect, heater, real value -->
    
    <!-- OIL level low effect (temperature raises) -->
    <filter>
        <name>Engine Oil Temperature gauge</name>
        <type>gain</type>
        <gain>
            <property>/engines/engine[0]/low-oil-temperature-factor</property>
        </gain>
        <input>
            <property>/engines/engine/oil-compensated-temperature-degf</property>
        </input>
        <output>
            <property>/engines/engine[0]/oil-temperature-degf-indicated</property>
        </output>
    </filter>

    <!-- OIL level low effect (pressure falls) -->
    <filter>
        <name>Engine Oil Pressure</name>
        <type>gain</type>
        <gain>
            <property>/engines/engine[0]/low-oil-pressure-factor</property>
        </gain>
        <input>
            <property>/engines/engine/oil-pressure-psi</property>
        </input>
        <output>
            <property>/engines/engine[0]/oil-pressure-psi-final</property>
        </output>
    </filter>

</PropertyList>
