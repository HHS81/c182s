<PropertyList>
    <name>AirspeedIndicator</name>
    <path>Airspeed.ac</path>
    <params>
      <tas-face-rotation>instrumentation/airspeed-indicator/tas-face-rotation</tas-face-rotation>
      <!--<indicated-speed-kts>instrumentation/airspeed-indicator/indicated-speed-kt</indicated-speed-kts>-->
<indicated-speed-kts>fdm/jsbsim/velocities/vias-kts</indicated-speed-kts><!-- does include error ccording POH Cessna 182S Page 5-9-->
    </params>

    <effect>
        <inherits-from>../Effects/c182s_interior_radiance</inherits-from>
        <object-name>Airspeed.TAS</object-name>
        <object-name>Airspeed.IAS</object-name>
        <object-name>Airspeed.Needle</object-name>
        <object-name>Airspeed.Knob</object-name>
    </effect>
    
    <animation>
        <type>noshadow</type>
    </animation>
    <animation>
        <type>range</type>
        <min-m>0</min-m>
        <max-m>10</max-m>
    </animation>
    
    <animation>
        <type>material</type>
        <object-name>Airspeed.TAS</object-name>
        <object-name>Airspeed.IAS</object-name>
        <object-name>Airspeed.Needle</object-name>
  <emission>
   <red>1.0</red>
   <green>0.8</green>
   <blue>0.4</blue>
   <factor-prop>/systems/electrical/outputs/instrument-lights-norm</factor-prop>
  </emission>
        <specular>
            <red>   0.0 </red>
            <green> 0.0 </green>
            <blue>  0.0 </blue>
        </specular>
        <ambient>
            <red>   1 </red>
            <green> 1 </green>
            <blue>  1 </blue>
        </ambient>
        <diffuse>
            <red>   0.3 </red>
            <green> 0.3 </green>
            <blue>  0.3 </blue>
        </diffuse>
        <shininess>
            <red>   0 </red>
            <green> 0 </green>
            <blue>  0 </blue>
        </shininess>
    </animation>
    
    <animation>
        <type>rotate</type>
        <object-name>Airspeed.TAS</object-name>
        <property alias="../../params/tas-face-rotation"/>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>Airspeed.Knob</object-name>
        <property alias="../../params/tas-face-rotation"/>
        <factor>5</factor>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>
        <center>
          <x-m>0.02158</x-m>
          <y-m>-0.0294</y-m>
          <z-m>-0.03047</z-m>
        </center>
    </animation>
    <animation>
        <type>rotate</type>
        <object-name>Airspeed.Needle</object-name>
        <property alias="../../params/indicated-speed-kts"/>
        <interpolation>
            <entry>
                <ind> 0</ind>
                <dep>0</dep>
            </entry>
            <entry>
                <ind> 40</ind>
                <dep> 30</dep>
            </entry>
            <entry>
                <ind> 50</ind>
                <dep> 50.3</dep>
            </entry>
            <entry>
                <ind> 60</ind>
                <dep> 69.6</dep>
            </entry>
            <entry>
                <ind> 70</ind>
                <dep> 89</dep>
            </entry>
            <entry>
                <ind> 80</ind>
                <dep>113</dep>
            </entry>
            <entry>
                <ind> 90</ind>
                <dep>137</dep>
            </entry>
            <entry>
                <ind>100</ind>
                <dep>160</dep>
            </entry>
            <entry>
                <ind> 110</ind>
                <dep>179</dep>
            </entry>
            <entry>
                <ind> 120</ind>
                <dep>198</dep>
            </entry>
            <entry>
                <ind> 130</ind>
                <dep>216</dep>
            </entry>
            <entry>
                <ind> 140</ind>
                <dep>235</dep>
            </entry>
            <entry>
                <ind> 150</ind>
                <dep>253</dep>
            </entry>
            <entry>
                <ind> 160</ind>
                <dep> 269</dep>
            </entry>
            <entry>
                <ind>170</ind>
                <dep> 281</dep>
            </entry>
            <entry>
                <ind> 180</ind>
                <dep> 294</dep>
            </entry>
            <entry>
                <ind>190</ind>
                <dep>306</dep>
            </entry>
            <entry>
                <ind> 200</ind>
                <dep> 319</dep>
            </entry>
            <entry>
                <ind> 210</ind>
                <dep> 330</dep>
            </entry>
            <entry>
                <ind> 230</ind>
                <dep> 340</dep>
            </entry>
        </interpolation>
        <axis>
            <x>-1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>KnobPick.L</object-name>
        <visible>false</visible>
        <action>
          <button>0</button>
          <repeatable>true</repeatable>
          <binding>
            <command>property-adjust</command>
            <property alias="../../../../params/tas-face-rotation"/>
            <step>-1</step>
            <min>-10</min>
            <max>100</max>
          </binding>
        </action>
        <action>
          <button>1</button>
          <repeatable>true</repeatable>
          <binding>
            <command>property-adjust</command>
            <property alias="../../../../params/tas-face-rotation"/>
            <step>-10</step>
            <min>-10</min>
            <max>100</max>
          </binding>
        </action>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>KnobPick.R</object-name>
        <visible>false</visible>
        <action>
          <button>0</button>
          <repeatable>true</repeatable>
          <binding>
            <command>property-adjust</command>
            <property alias="../../../../params/tas-face-rotation"/>
            <step>1</step>
            <min>-10</min>
            <max>100</max>
          </binding>
        </action>
        <action>
          <button>1</button>
          <repeatable>true</repeatable>
          <binding>
            <command>property-adjust</command>
            <property alias="../../../../params/tas-face-rotation"/>
            <step>10</step>
            <min>-10</min>
            <max>100</max>
          </binding>
        </action>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>Airspeed.Knob</object-name>
        <visible>true</visible>
        <action>
          <button>3</button>
          <repeatable>true</repeatable>
          <binding>
            <command>property-adjust</command>
            <property alias="../../../../params/tas-face-rotation"/>
            <step>-1</step>
            <min>-10</min>
            <max>100</max>
          </binding>
        </action>
        <action>
          <button>4</button>
          <repeatable>true</repeatable>
          <binding>
            <command>property-adjust</command>
            <property alias="../../../../params/tas-face-rotation"/>
            <step>1</step>
            <min>-10</min>
            <max>100</max>
          </binding>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <label>Adjust TAS</label>
                 <tooltip-id>airspeed</tooltip-id>
                <!--<mapping>percent</mapping>-->
                <property alias="../../../../params/tas-face-rotation" />
            </binding>
        </hovered>
    </animation>
    
    
  <!-- TEXT OSG -->
  <text>
    <name>textosg</name>
    <type type="string">literal</type>
    <text type="string">Airspeed</text>
    <draw-text type="bool">true</draw-text>
    <font>Helvetica.txf</font>
    <character-size type="double">0.014</character-size>
    <character-aspect-ratio type="double">1.0</character-aspect-ratio>
    <axis-alignment>yz-plane</axis-alignment>
    <max-height>0.06</max-height>
    <max-width>0.08</max-width>
    <font-resolution>
      <width type="int">64</width>
      <height type="int">64</height>
    </font-resolution>
    <alignment>center-center</alignment>
    <offsets>
      <x-m>  0.005 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.000 </z-m>
    </offsets>
  </text>

  <animation>
    <type>material</type>
    <object-name>textosg</object-name>
    <emission>
      <red>   0.8 </red>
      <green> 0.8 </green>
      <blue>  0.0 </blue>
    </emission>
  </animation>

  <animation>
    <type>select</type>
    <object-name>textosg</object-name>
    <condition>
      <property>sim/panel-hotspots</property>
    </condition>
  </animation>

</PropertyList>
