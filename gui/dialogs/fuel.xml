<?xml version="1.0"?>

<PropertyList>

    <name>fuelmgmt-dialog</name>
    <layout>vbox</layout>
    <resizable>false</resizable>
    <modal>false</modal>
    <draggable>true</draggable>

    <group>
        <layout>hbox</layout>

        <empty><stretch>true</stretch></empty>
        <text>
            <label>Fuel management</label>
        </text>
        <empty><stretch>true</stretch></empty>

        <button>
            <legend>X</legend>
            <key>Esc</key>
            <halign>right</halign>
            <pref-width>20</pref-width>
            <pref-height>20</pref-height>
            <binding>
                <command>dialog-close</command>
            </binding>
        </button>
    </group>

    <hrule/>

    <group>
        <layout>vbox</layout>
        <padding>6</padding>

        <group>
            <layout>hbox</layout>
            <padding>6</padding>

            <empty><stretch>true</stretch></empty>
            <button>
                <legend>Left Wing</legend>
                <binding>
                    <command>dialog-show</command>
                    <dialog-name type="string">c182s-left-fuel-drain-dialog</dialog-name>
                </binding>
            </button>
        
            <empty><stretch>true</stretch></empty>
            <button>
                <legend>Right Wing</legend>
                <binding>
                    <command>dialog-show</command>
                    <dialog-name type="string">c182s-right-fuel-drain-dialog</dialog-name>
                </binding>
            </button>
        </group>
        
        <group>
            <layout>hbox</layout>
            <padding>6</padding>
            
            <empty><stretch>true</stretch></empty>
            <button>
                <legend>Fuel Selector</legend>
                <binding>
                    <command>dialog-show</command>
                    <dialog-name type="string">c182s-fuelselector-dialog</dialog-name>
                </binding>
            </button>

            <empty><stretch>true</stretch></empty>
            <button>
                <legend>Fuel Strainer</legend>
                <binding>
                    <command>dialog-show</command>
                    <dialog-name type="string">c182s-fuelstrainer-dialog</dialog-name>
                </binding>
            </button>
        </group>
        
        
        <hrule/>
        
        <group>
            <layout>vbox</layout>
            <empty><stretch>true</stretch></empty>
            <button>
                <legend>Oil management</legend>
                <binding>
                    <command>dialog-show</command>
                    <dialog-name type="string">c182s-oilmanagement-dialog</dialog-name>
                </binding>
            </button>
        </group>
        
    </group>


</PropertyList>
