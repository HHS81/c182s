<PropertyList include="c182s-set.xml">

    <sim>
        <variant-of>c182s</variant-of>
        <description>Cessna 182S (1996; on Floats)</description>
        <tags>
            <tag>floats</tag>
        </tags>
        
        <flight-model>jsb</flight-model>
        <aero>c182s-floats</aero>
        
        <help>
            <key>
                <name>g</name>
                <desc>Floats gear up/down</desc>
            </key>
            <key>
                <name>r</name>
                <desc>Floats paddle up/down</desc>
            </key>
        </help>

