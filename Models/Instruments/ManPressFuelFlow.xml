<?xml version="1.0"?>

<PropertyList>

    <path>ManPressFuelFlow.ac</path>

  <effect>
    <inherits-from>../Effects/c182s_interior_radiance</inherits-from>
    <object-name>Face</object-name>
    <object-name>ManPressNeedle</object-name>
    <object-name>FuelFlowNeedle</object-name>
  </effect>

    <animation>
        <type>material</type>
        <object-name>Face</object-name>
        <object-name>ManPressNeedle</object-name>
        <object-name>FuelFlowNeedle</object-name>
  <emission>
   <red>1.0</red>
   <green>0.8</green>
   <blue>0.4</blue>
   <factor-prop>systems/electrical/outputs/instrument-lights-norm</factor-prop>
  </emission>
        <specular>
            <red>   0.0 </red>
            <green> 0.0 </green>
            <blue>  0.0 </blue>
        </specular>
        <ambient>
            <red>   1 </red>
            <green> 1 </green>
            <blue>  1 </blue>
        </ambient>
        <diffuse>
            <red>   0.3 </red>
            <green> 0.3 </green>
            <blue>  0.3 </blue>
        </diffuse>
        <shininess>
            <red>   0 </red>
            <green> 0 </green>
            <blue>  0 </blue>
        </shininess>  
    </animation>
    
    

    <animation>
        <type>rotate</type>
        <object-name>ManPressNeedle</object-name>
        <property>engines/engine/mp-inhg</property>
 <interpolation>
      <entry><ind>0</ind><dep> 0</dep></entry>
      <entry><ind>10</ind><dep> -12.54</dep></entry>
      <entry><ind>15</ind><dep>-38.84</dep></entry>
      <entry><ind>20</ind><dep>-57.33</dep></entry>
      <entry><ind>25</ind><dep>-80.84</dep></entry>
      <entry><ind>30</ind><dep>-103.25</dep></entry>
      <entry><ind>35</ind><dep>-125</dep></entry>
    </interpolation>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
    <center>
      <x-m> 0.001 </x-m>
      <y-m> -0.026 </y-m>
      <z-m> -0 </z-m>
    </center>
    </animation>
    
   <animation>
        <type>rotate</type>
        <object-name>FuelFlowNeedle</object-name>
        <property>engines/engine/indicated-manfold-fuel-flow-gph</property>
 <interpolation>
      <entry><ind>0</ind><dep>0</dep></entry>
      <entry><ind>5</ind><dep> 5.27</dep></entry>
      <entry><ind>10</ind><dep> 20.17</dep></entry>
     <entry><ind>15</ind><dep>61.22</dep></entry>
      <entry><ind>20</ind><dep> 112.3</dep></entry>
      <entry><ind>21</ind><dep> 122.5</dep></entry>

    </interpolation>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
    <center>
      <x-m> 0.001 </x-m>
      <y-m> 0.026 </y-m>
      <z-m> -0 </z-m>
    </center>
    </animation>
  <!-- TEXT OSG -->
  <text>
    <name>textosg</name>
    <type type="string">literal</type>
    <text type="string">Manfold Pressure</text>
    <draw-text type="bool">true</draw-text>
    <font>Helvetica.txf</font>
    <character-size type="double">0.014</character-size>
    <character-aspect-ratio type="double">1.0</character-aspect-ratio>
    <axis-alignment>yz-plane</axis-alignment>
    <max-height>0.06</max-height>
    <max-width>0.05</max-width>
    <font-resolution>
      <width type="int">64</width>
      <height type="int">64</height>
    </font-resolution>
    <alignment>center-center</alignment>
    <offsets>
      <x-m>  0.01 </x-m>
      <y-m>  -0.035 </y-m>
      <z-m>  0.000 </z-m>
    </offsets>
  </text>

  <animation>
    <type>material</type>
    <object-name>textosg</object-name>
    <emission>
      <red>   0.8 </red>
      <green> 0.8 </green>
      <blue>  0.0 </blue>
    </emission>
  </animation>

  <animation>
    <type>select</type>
    <object-name>textosg</object-name>
    <condition>
      <property>sim/panel-hotspots</property>
    </condition>
  </animation>
  
  
  <!-- TEXT OSG -->
  <text>
    <name>textosg2</name>
    <type type="string">literal</type>
    <text type="string">Fuel Flow GPH</text>
    <draw-text type="bool">true</draw-text>
    <font>Helvetica.txf</font>
    <character-size type="double">0.014</character-size>
    <character-aspect-ratio type="double">1.0</character-aspect-ratio>
    <axis-alignment>yz-plane</axis-alignment>
    <max-height>0.06</max-height>
    <max-width>0.05</max-width>
    <font-resolution>
      <width type="int">64</width>
      <height type="int">64</height>
    </font-resolution>
    <alignment>center-center</alignment>
    <offsets>
      <x-m>  0.01 </x-m>
      <y-m>  0.030 </y-m>
      <z-m>  0.000 </z-m>
    </offsets>
  </text>

  <animation>
    <type>material</type>
    <object-name>textosg2</object-name>
    <emission>
      <red>   0.8 </red>
      <green> 0.8 </green>
      <blue>  0.0 </blue>
    </emission>
  </animation>

  <animation>
    <type>select</type>
    <object-name>textosg2</object-name>
    <condition>
      <property>sim/panel-hotspots</property>
    </condition>
  </animation>
   

</PropertyList>
