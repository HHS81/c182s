<?xml version="1.0" encoding="UTF-8"?>
<PropertyList>
	<path>yoke-cable.ac</path>
	
	<animation>
		<type>scale</type>
		<object-name>YokeEnd</object-name>
		<object-name>YokePart</object-name>
		<object-name>MiddlePart</object-name>
		<object-name>PanelPart</object-name>
		<center>
			<x-m>0.01</x-m>
		</center>
		<property>controls/flight/elevator</property>
		<x-factor>-0.75</x-factor>
		<x-offset>1</x-offset>
		<x-min>1</x-min>
		<x-max>2</x-max>
		<y-min>1</y-min>
		<y-max>1</y-max>
		<z-min>1</z-min>
		<z-max>1</z-max>
	</animation>
	
	<animation>
		<type>rotate</type>
		<object-name>PanelPart</object-name>
		<object-name>MiddlePart</object-name>
		<object-name>YokePart</object-name>
		<object-name>YokeEnd</object-name>
		<axis>
			<z>1</z>
		</axis>
		<center>
			<x-m>0.01</x-m>
		</center>
		<property>controls/flight/aileron</property>
		<factor>-10</factor>
	</animation>
	
	<animation>
		<type>rotate</type>
		<object-name>PanelPart</object-name>
		<object-name>MiddlePart</object-name>
		<object-name>YokePart</object-name>
		<object-name>YokeEnd</object-name>
		<axis>
			<y>1</y>
		</axis>
		<center>
			<x-m>0.01</x-m>
		</center>
		<expression>
			<prod>
				<abs>
					<property>controls/flight/aileron</property>
				</abs>
				<value>-8</value>
			</prod>
		</expression>
	</animation>
	
	<animation>
		<type>rotate</type>
		<object-name>PanelPart</object-name>
		<object-name>MiddlePart</object-name>
		<axis>
			<y>1</y>
		</axis>
		<center>
			<x-m>0.01</x-m>
		</center>
		<expression>
			<prod>
				<rad2deg>
					<acos>
						<dif>
							<value>1</value>
							<property>controls/flight/elevator</property>
						</dif>
					</acos>
				</rad2deg>
				<value>0.95</value>
			</prod>
		</expression>
	</animation>
	
	<animation>
		<type>rotate</type>
		<object-name>MiddlePart</object-name>
		<axis>
			<y>1</y>
		</axis>
		<center>
			<x-m>0.080348</x-m>
		</center>
		<expression>
			<prod>
				<rad2deg>
					<acos>
						<dif>
							<value>1</value>
							<property>controls/flight/elevator</property>
						</dif>
					</acos>
				</rad2deg>
				<value>-0.95</value>
			</prod>
		</expression>
	</animation>
	
	<animation>
		<type>translate</type>
		<object-name>YokeEnd</object-name>
		<object-name>YokePart</object-name>
		<axis>
			<x>-1</x>
		</axis>
		<property>controls/flight/elevator</property>
		<factor>0.13</factor>
		<min-m>0</min-m>
		<max-m>0.13</max-m>
	</animation>
	
	<animation>
		<type>locked-track</type>
		<object-name>YokePart</object-name>
		<lock-axis>
			<x>0</x>
			<y>1</y>
			<z>0</z>
		</lock-axis>
		<center>
			<x-m>0.17</x-m>
			<y-m>0</y-m>
			<z-m>0</z-m>
		</center>
		<track-axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</track-axis>
		<target-name>MiddlePart</target-name>
		<target-center>
			<x-m>0.1</x-m>
			<y-m>0</y-m>
			<z-m>0</z-m>
		</target-center>
	</animation>
</PropertyList>
