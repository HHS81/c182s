<PropertyList>

  <path>Davtron803.ac</path>

  <!--<effect>
      <inherits-from>../Effects/c182s_interior_radiance</inherits-from>
      <object-name>face</object-name>
      <object-name>OAT.swt</object-name>
      <object-name>Select.btn</object-name>
      <object-name>Control.btn</object-name>
      <object-name>lcd</object-name>
  </effect>-->

  <animation>
    <!-- buttons and overall instrument -->
    <type>material</type>
    <object-name>face</object-name>
    <object-name>OAT.swt</object-name>    <!-- switch OAT mode -->
    <object-name>Select.btn</object-name> <!-- switch clock modes -->
    <object-name>Control.btn</object-name><!-- control current mode -->
          <specular>
            <red>   0.0 </red>
            <green> 0.0 </green>
            <blue>  0.0 </blue>
        </specular>
        <ambient>
            <red>   1 </red>
            <green> 1 </green>
            <blue>  1 </blue>
        </ambient>
        <diffuse>
            <red>   0.3 </red>
            <green> 0.3 </green>
            <blue>  0.3 </blue>
        </diffuse>
        <shininess>
            <red>   0 </red>
            <green> 0 </green>
            <blue>  0 </blue>
        </shininess>  
  </animation>

  <animation>
    <type>material</type>
    <object-name>lcd</object-name>
    <condition>
      <not><property>sim/rendering/rembrandt/enabled</property></not>
    </condition>
    <emission>
      <red>   1.0 </red>
      <green> 0.8 </green>
      <blue>  0.4 </blue>
      <factor-prop>systems/electrical/outputs/instrument-lights-norm</factor-prop>
    </emission>
          <specular>
            <red>   0.0 </red>
            <green> 0.0 </green>
            <blue>  0.0 </blue>
        </specular>
        <ambient>
            <red>   1 </red>
            <green> 1 </green>
            <blue>  1 </blue>
        </ambient>
        <diffuse>
            <red>   0.3 </red>
            <green>0.3 </green>
            <blue>  0.3 </blue>
        </diffuse>
        <shininess>
            <red>   0 </red>
            <green> 0 </green>
            <blue>  0 </blue>
        </shininess>  
  </animation>
  
  
  <!-- OAT button -->
  <animation>
    <type>translate</type>
    <object-name>OAT.swt</object-name>
    <property>instrumentation/davtron803/oat-btn</property>
    <factor>-0.003</factor>
    <axis>
        <x>1</x>
        <y>0</y>
        <z>0</z>
    </axis>
  </animation>
  <animation>
    <type>pick</type>
    <object-name>OAT.swt</object-name>
    <object-name>OAT.swt.cs</object-name>
    <action>
        <button>0</button>
        <binding>
            <command>property-toggle</command>
            <property>instrumentation/davtron803/oat-btn</property>
        </binding>
        <mod-up>
            <binding>
                <command>property-toggle</command>
            <property>instrumentation/davtron803/oat-btn</property>
            </binding>
        </mod-up>
        <binding>
            <condition>
                <property>instrumentation/davtron803/operable</property>
            </condition>
            <command>property-cycle</command>
            <property>instrumentation/davtron803/internal/top-mode</property>
            <value>0</value>
            <value>1</value>
            <value>2</value>
        </binding>
    </action>
  </animation>
  <animation>
    <type>pick</type>
    <object-name>OAT.swt.cs</object-name>
    <visible>false</visible>
    <nopreview/>
  </animation>
  
  <!-- Select button -->
  <animation>
        <type>slider</type>
        <object-name>Select.btn</object-name>
        <object-name>Select.btn.cs</object-name>
        <property>instrumentation/davtron803/select-btn</property>
        <factor>-0.003</factor>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>

        <action>
            <binding>
                <command>property-assign</command>
                <property>instrumentation/davtron803/select-btn</property>
                <value>1</value>
            </binding>
            <binding>
                <condition>
                    <property>instrumentation/davtron803/operable</property>
                    <not><property>instrumentation/davtron803/logic/test</property></not>
                    <not><property>instrumentation/davtron803/internal/select-btn-timer</property></not>
                    <not><property>instrumentation/davtron803/internal/both-btn-timer</property></not>
                </condition>
                <command>property-assign</command>
                <property>instrumentation/davtron803/internal/select-btn-timer</property>
                <property>sim/time/elapsed-sec</property>
            </binding>
        </action>
        <release>
            <binding>   <!-- Change mode -->
                <condition>
                    <property>instrumentation/davtron803/operable</property>
                    <not><property>instrumentation/davtron803/internal/bot-mode-set</property></not>
                    <not><property>instrumentation/davtron803/logic/test</property></not>
                    <not><property>instrumentation/davtron803/internal/both-btn-timer</property></not>
                    <not><property>instrumentation/davtron803/annunciators/alarm</property></not>
                    <greater-than>
                        <property>instrumentation/davtron803/internal/select-btn-timer</property>
                        <value>0</value>
                    </greater-than>
                    <less-than>
                        <expression>
                            <dif>
                                <property>sim/time/elapsed-sec</property>
                                <property>instrumentation/davtron803/internal/select-btn-timer</property>
                            </dif>
                        </expression>
                        <value>1.0</value>
                    </less-than>
                </condition>
                <command>property-adjust</command>
                <property>instrumentation/davtron803/internal/bot-mode</property>
                <step>1</step>
                <min>0</min>
                <max>4</max>
                <wrap>true</wrap>
            </binding>
            <binding>   <!-- Change selected digit in adjust mode -->
                <condition>
                    <property>instrumentation/davtron803/operable</property>
                    <not><property>instrumentation/davtron803/annunciators/alarm</property></not>
                    <greater-than>
                        <property>instrumentation/davtron803/internal/bot-mode-set</property>
                        <value>0</value>
                    </greater-than>
                    <not><property>instrumentation/davtron803/logic/test</property></not>
                    <not><property>instrumentation/davtron803/internal/both-btn-timer</property></not>
                    <greater-than>
                        <property>instrumentation/davtron803/internal/select-btn-timer</property>
                        <value>0</value>
                    </greater-than>
                    <less-than>
                        <expression>
                            <dif>
                                <property>sim/time/elapsed-sec</property>
                                <property>instrumentation/davtron803/internal/select-btn-timer</property>
                            </dif>
                        </expression>
                        <value>1.0</value>
                    </less-than>
                </condition>
                <command>property-adjust</command>
                <property>instrumentation/davtron803/internal/bot-mode-set</property>
                <step>1</step>
                <min>0</min>
                <max>6</max>
                <wrap>true</wrap>
            </binding>
            <binding>
                <command>property-interpolate</command>
                <property>instrumentation/davtron803/select-btn</property>
                <value type="double">0</value>
                <time>0.1</time>
            </binding>
            <binding>
                <command>property-interpolate</command>
                <property>instrumentation/davtron803/control-btn</property>
                <value type="double">0</value>
                <time>0.1</time>
            </binding>
            <binding>
                <command>property-assign</command>
                <property>instrumentation/davtron803/internal/select-btn-timer</property>
                <value>0</value>
            </binding>
            <binding>
                <command>property-assign</command>
                <property>instrumentation/davtron803/internal/both-btn-timer</property>
                <value>0</value>
            </binding>
        </release>
        
        <shift-action>
            <repeatable>false</repeatable>
            <binding>
                <command>property-assign</command>
                <property>instrumentation/davtron803/select-btn</property>
                <value>1</value>
            </binding>
            <binding>
                <command>property-assign</command>
                <property>instrumentation/davtron803/control-btn</property>
                <value>1</value>
            </binding>
            <binding>
                <condition>
                    <property>instrumentation/davtron803/operable</property>
                    <not><property>instrumentation/davtron803/internal/bot-mode-set</property></not>
                    <not><property>instrumentation/davtron803/logic/test</property></not>
                    <not><property>instrumentation/davtron803/internal/both-btn-timer</property></not>
                    <not><property>instrumentation/davtron803/annunciators/alarm</property></not>
                </condition>
                <command>property-assign</command>
                <property>instrumentation/davtron803/internal/both-btn-timer</property>
                <property>sim/time/elapsed-sec</property>
            </binding>
            
            <binding>  <!-- Enter adjust mode -->
                <condition>
                    <property>instrumentation/davtron803/operable</property>
                    <not><property>instrumentation/davtron803/annunciators/alarm</property></not>
                    <or>
                        <property>instrumentation/davtron803/logic/mode-ft</property>
                        <property>instrumentation/davtron803/logic/mode-et</property>
                    </or>
                    <not><property>instrumentation/davtron803/internal/bot-mode-set</property></not>
                </condition>
                <command>property-assign</command>
                <property>instrumentation/davtron803/internal/bot-mode-set</property>
                <value>-1</value>
            </binding>
        </shift-action>
  </animation>
  <animation>
    <type>pick</type>
    <object-name>Select.btn.cs</object-name>
    <visible>false</visible>
    <nopreview/>
  </animation>
  
  <!-- Control button -->
  <animation>
        <type>slider</type>
        <object-name>Control.btn</object-name>
        <object-name>Control.btn.cs</object-name>
        <property>instrumentation/davtron803/control-btn</property>
        <factor>-0.003</factor>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>
        
        <action>
            <binding>
                <command>property-assign</command>
                <property>instrumentation/davtron803/control-btn</property>
                <value>1</value>
            </binding>
            <binding>
                <condition>
                    <property>instrumentation/davtron803/operable</property>
                    <not><property>instrumentation/davtron803/logic/test</property></not>
                    <not><property>instrumentation/davtron803/internal/control-btn-timer</property></not>
                    <not><property>instrumentation/davtron803/internal/both-btn-timer</property></not>
                </condition>
                <command>property-assign</command>
                <property>instrumentation/davtron803/internal/control-btn-timer</property>
                <property>sim/time/elapsed-sec</property>
            </binding>
        </action>
        <release>
            <binding>    <!-- Apply FT timer reset -->
                <condition>
                    <and>
                        <property>instrumentation/davtron803/operable</property>
                        <property>instrumentation/davtron803/logic/mode-ft</property>
                        <equals>
                            <property>instrumentation/davtron803/flight-time-secs</property>
                            <value>999999</value>
                        </equals>
                    </and>
                </condition>
                <command>property-assign</command>
                <property>instrumentation/davtron803/flight-time-secs</property>
                <value>0</value>
            </binding>
            
            
            <binding>   <!-- See if we need to evaluate ET timer actions -->
                <condition>
                    <property>instrumentation/davtron803/operable</property>
                    <property>instrumentation/davtron803/logic/mode-et</property>
                    <not><property>instrumentation/davtron803/internal/bot-mode-set</property></not>
                    <greater-than>
                        <property>instrumentation/davtron803/internal/control-btn-timer</property>
                        <value>0</value>
                    </greater-than>
                </condition>
                <command>property-assign</command>
                <property>instrumentation/davtron803/internal/elapsed-timer-checkme</property>
                <value>1</value>
            </binding>
            <binding>   <!-- start ET timer (count-up) -->
                <condition>
                    <property>instrumentation/davtron803/internal/elapsed-timer-checkme</property>
                    <equals>
                        <property>instrumentation/davtron803/internal/elapsed-timer-step</property>
                        <value>0</value>
                    </equals>
                    <equals>
                        <property>instrumentation/davtron803/elapsed-time-secs</property>
                        <value>0</value>
                    </equals>
                    <not><property>instrumentation/davtron803/internal/elapsed-timer-alarm-armed</property></not>
                </condition>
                <command>nasal</command>
                <script>
                    setprop("/instrumentation/davtron803/internal/elapsed-timer-checkme", 0);
                    setprop("/instrumentation/davtron803/internal/elapsed-timer-step", 1);
                </script>
            </binding>
            <binding>   <!-- start ET timer (count-down) -->
                <condition>
                    <property>instrumentation/davtron803/internal/elapsed-timer-checkme</property>
                    <equals>
                        <property>instrumentation/davtron803/internal/elapsed-timer-step</property>
                        <value>0</value>
                    </equals>
                    <and>
                        <greater-than>
                            <property>instrumentation/davtron803/elapsed-time-secs</property>
                            <value>0</value>
                        </greater-than>
                        <property>instrumentation/davtron803/internal/elapsed-timer-alarm-armed</property>
                    </and>
                </condition>
                <command>nasal</command>
                <script>
                    setprop("/instrumentation/davtron803/internal/elapsed-timer-checkme", 0);
                    setprop("/instrumentation/davtron803/internal/elapsed-timer-step", -1);
                </script>
            </binding>
            <binding>   <!-- stop ET timer -->
                <condition>
                    <property>instrumentation/davtron803/internal/elapsed-timer-checkme</property>
                    <greater-than>
                        <property>instrumentation/davtron803/internal/control-btn-timer</property>
                        <value>0</value>
                    </greater-than>
                    <not-equals>
                        <property>instrumentation/davtron803/internal/elapsed-timer-step</property>
                        <value>0</value>
                    </not-equals>
                </condition>
                <command>nasal</command>
                <script>
                    setprop("/instrumentation/davtron803/internal/elapsed-timer-checkme", 0);
                    setprop("/instrumentation/davtron803/internal/elapsed-timer-step", 0);
                </script>
            </binding>
            <binding>   <!-- reset ET timer -->
                <condition>
                    <property>instrumentation/davtron803/internal/elapsed-timer-checkme</property>
                    <greater-than>
                        <property>instrumentation/davtron803/internal/control-btn-timer</property>
                        <value>0</value>
                    </greater-than>
                    <equals>
                        <property>instrumentation/davtron803/internal/elapsed-timer-step</property>
                        <value>0</value>
                    </equals>
                    <greater-than>
                        <property>instrumentation/davtron803/elapsed-time-secs</property>
                        <value>0</value>
                    </greater-than>
                </condition>
                <command>nasal</command>
                <script>
                    setprop("/instrumentation/davtron803/internal/elapsed-timer-checkme", 0);
                    setprop("/instrumentation/davtron803/elapsed-time-secs", 0);
                </script>
            </binding>
            <binding>   <!-- In any case reset the ET cehck logic ath the end -->
                <command>property-assign</command>
                <property>instrumentation/davtron803/internal/elapsed-timer-checkme</property>
                <value>0</value>
            </binding>
            
            <binding>   <!-- Adjust selected digit in adjust mode -->
                <condition>
                    <property>instrumentation/davtron803/operable</property>
                    <greater-than>
                        <property>instrumentation/davtron803/internal/bot-mode-set</property>
                        <value>0</value>
                    </greater-than>
                    <not><property>instrumentation/davtron803/logic/test</property></not>
                    <not><property>instrumentation/davtron803/internal/both-btn-timer</property></not>
                    <greater-than>
                        <property>instrumentation/davtron803/internal/control-btn-timer</property>
                        <value>0</value>
                    </greater-than>
                    <less-than>
                        <expression>
                            <dif>
                                <property>sim/time/elapsed-sec</property>
                                <property>instrumentation/davtron803/internal/control-btn-timer</property>
                            </dif>
                        </expression>
                        <value>1.0</value>
                    </less-than>
                </condition>
                <command>nasal</command>
                <script>davtron803.adjustDigit()</script>
            </binding>
            
            <binding>
                <command>property-interpolate</command>
                <property>instrumentation/davtron803/select-btn</property>
                <value type="double">0</value>
                <time>0.1</time>
            </binding>
            <binding>
                <command>property-interpolate</command>
                <property>instrumentation/davtron803/control-btn</property>
                <value type="double">0</value>
                <time>0.1</time>
            </binding>
            <binding>
                <command>property-assign</command>
                <property>instrumentation/davtron803/internal/control-btn-timer</property>
                <value>0</value>
            </binding>
            <binding>
                <command>property-assign</command>
                <property>instrumentation/davtron803/internal/both-btn-timer</property>
                <value>0</value>
            </binding>
        </release>
        
        <shift-action>
            <binding>
                <command>property-assign</command>
                <property>instrumentation/davtron803/select-btn</property>
                <value>1</value>
            </binding>
            <binding>
                <command>property-assign</command>
                <property>instrumentation/davtron803/control-btn</property>
                <value>1</value>
            </binding>
            <binding>
                <condition>
                    <property>instrumentation/davtron803/operable</property>
                    <not><property>instrumentation/davtron803/internal/bot-mode-set</property></not>
                    <not><property>instrumentation/davtron803/logic/test</property></not>
                    <not><property>instrumentation/davtron803/internal/both-btn-timer</property></not>
                </condition>
                <command>property-assign</command>
                <property>instrumentation/davtron803/internal/both-btn-timer</property>
                <property>sim/time/elapsed-sec</property>
            </binding>
            
            <binding> <!-- Enter adjust mode -->
                <condition>
                    <property>instrumentation/davtron803/operable</property>
                    <or>
                        <property>instrumentation/davtron803/logic/mode-ft</property>
                        <property>instrumentation/davtron803/logic/mode-et</property>
                    </or>
                    <not><property>instrumentation/davtron803/internal/bot-mode-set</property></not>
                </condition>
                <command>property-assign</command>
                <property>instrumentation/davtron803/internal/bot-mode-set</property>
                <value>-1</value>
            </binding>
        </shift-action>
  </animation>
  <animation>
    <type>pick</type>
    <object-name>Control.btn.cs</object-name>
    <visible>false</visible>
    <nopreview/>
  </animation>
  
  

  <!-- ##################### -->
  <!--     OSG Help text     -->
  <!-- ##################### -->
  <text>
    <name>textosg</name>
    <type type="string">literal</type>
    <text type="string">Volts/Temperature &amp; Clock</text>
    <draw-text type="bool">true</draw-text>
    <font>Helvetica.txf</font>
    <character-size type="double">0.014</character-size>
    <character-aspect-ratio type="double">1.0</character-aspect-ratio>
    <axis-alignment>yz-plane</axis-alignment>
    <max-height>0.08</max-height>
    <max-width>0.10</max-width>
    <font-resolution>
      <width type="int">64</width>
      <height type="int">64</height>
    </font-resolution>
    <alignment>center-center</alignment>
    <offsets>
      <x-m>  0.005 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.000 </z-m>
    </offsets>
  </text>

  <animation>
    <type>material</type>
    <object-name>textosg</object-name>
    <emission>
      <red>   0.8 </red>
      <green> 0.8 </green>
      <blue>  0.0 </blue>
    </emission>
  </animation>

  <animation>
    <type>select</type>
    <object-name>textosg</object-name>
    <condition>
      <property>sim/panel-hotspots</property>
    </condition>
  </animation>
  
</PropertyList>

