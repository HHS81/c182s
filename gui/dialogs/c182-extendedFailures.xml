  <group>
    <layout>hbox</layout>

    <text>
        <label>A)  Trigger</label>
        <halign>left</halign>
    </text>

    <input>
        <name>c182-customfailures-randomsurprise-ammount</name>
        <halign>left</halign>
        <property>/sim/failure-manager/surprise-mode/ammount</property>
        <type>INT</type>
        <width>100</width>
        <live>true</live>
        <binding>
            <command>dialog-apply</command>
            <name>c182-customfailures-randomsurprise-ammount</name>
        </binding>
    </input>
    
    <text>
        <label>random failures in </label>
        <halign>left</halign>
    </text>
    
    <input>
        <name>c182-customfailures-randomsurprise-maxtime</name>
        <halign>left</halign>
        <property>/sim/failure-manager/surprise-mode/maxtime</property>
        <type>INT</type>
        <width>100</width>
        <live>true</live>
        <binding>
            <command>dialog-apply</command>
            <name>c182-customfailures-randomsurprise-maxtime</name>
        </binding>
    </input>
    
    <text>
        <label>maximal minutes</label>
        <halign>left</halign>
    </text>
    
    <button>
      <legend>Surprise me!</legend>
      <equal>true</equal>
      <enable>
        <and>
            <less-than>
                <property>/sim/failure-manager/surprise-mode/button-locked</property>
                <value>0.01</value>
            </less-than>
            <greater-than>
                <property>/sim/failure-manager/surprise-mode/ammount</property>
                <value>0</value>
            </greater-than>
        </and>
      </enable>
      <binding>
        <command>nasal</command>
        <script>
            failures.initRandomFailures();
            setprop("/sim/failure-manager/surprise-mode/button-locked",1);
            interpolate("/sim/failure-manager/surprise-mode/button-locked", 0, 3);
        </script>
      </binding>
    </button>
  </group>  
  
  <group>
    <layout>hbox</layout>

    <text>
        <label>B)  Trigger one random failure about every </label>
        <halign>left</halign>
    </text>

    <input>
        <name>c182-customfailures-randomsurprise-timer</name>
        <halign>left</halign>
        <property>/sim/failure-manager/surprise-mode/timer</property>
        <type>INT</type>
        <width>100</width>
        <live>true</live>
        <binding>
            <command>dialog-apply</command>
            <name>c182-customfailures-randomsurprise-timer</name>
        </binding>
    </input>
    
    <text>
        <label>minutes</label>
        <halign>left</halign>
    </text>
    
    <button>
      <legend>Start</legend>
      <equal>true</equal>
      <enable>
        <and>
            <not><property>/sim/failure-manager/surprise-mode/timer-active</property></not>
            <greater-than>
                <property>/sim/failure-manager/surprise-mode/timer</property>
                <value>0</value>
            </greater-than>
        </and>
      </enable>
      <binding>
        <command>nasal</command>
        <script>failures.initRandomFailureTimer();</script>
      </binding>
    </button>
    
    <button>
      <legend>Stop</legend>
      <equal>true</equal>
      <enable>
        <and>
            <property>/sim/failure-manager/surprise-mode/timer-active</property>
        </and>
      </enable>
      <binding>
        <command>nasal</command>
        <script>failures.initRandomFailureTimer();</script>
      </binding>
    </button>
  </group>

  
  <!-- Final buttons -->
  <hrule/>

  <group>
    <layout>hbox</layout>
    <default-padding>7</default-padding>

    <button>
      <legend>OK</legend>
      <default>true</default>
      <equal>true</equal>
      <binding>
        <command>dialog-apply</command>
      </binding>
      <binding>
        <command>dialog-close</command>
      </binding>
    </button>

    <button>
      <legend>Apply</legend>
      <equal>true</equal>
      <binding>
        <command>dialog-apply</command>
      </binding>
    </button>

    <button>
      <legend>Refresh</legend>
      <equal>true</equal>
      <binding>
        <command>dialog-update</command>
      </binding>
    </button>

    <button>
      <legend>Cancel</legend>
      <equal>true</equal>
      <key>Esc</key>
      <binding>
        <command>dialog-close</command>
      </binding>
    </button>

  </group>

</PropertyList>
