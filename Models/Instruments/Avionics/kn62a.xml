<!-- Switches -->

<animation>
  <type>translate</type>
  <object-name>SwPower</object-name>
  <property>/controls/switches/kn-62a</property>
  <interpolation>
    <entry><ind>0</ind><dep>0</dep></entry>
    <entry><ind>1</ind><dep>0.004</dep></entry>
  </interpolation>
  <axis>
    <x>0</x>
    <y>1</y>
    <z>0</z>
  </axis>
</animation>

<animation>
  <type>translate</type>
  <object-name>SwFunction</object-name>
  <property>controls/switches/kn-62a-mode</property>
  <interpolation>
    <entry><ind>0</ind><dep>-0.004</dep></entry>
    <entry><ind>1</ind><dep>0</dep></entry>
    <entry><ind>2</ind><dep>0.004</dep></entry>
  </interpolation>
  <axis>
    <x>0</x>
    <y>1</y>
    <z>0</z>
  </axis>
</animation>
    
  <animation>
    <type>pick</type>
  <object-name>SwPower</object-name>
  <object-name>SwPower.CS</object-name>
    <visible>true</visible>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
        <binding>
          <command>property-toggle</command>
          <property>/controls/switches/kn-62a</property>
        </binding>
        <binding>
            <command>nasal</command>
            <script>c182s.click("kn62a")</script>
        </binding>
    </action>
    <action>
      <button>1</button>
      <repeatable>false</repeatable>
        <binding>
          <command>property-toggle</command>
          <property>/controls/switches/kn-62a</property>
        </binding>
        <binding>
            <command>nasal</command>
            <script>c182s.click("kn62a")</script>
        </binding>
    </action>
    <action>
      <button>2</button>
      <repeatable>false</repeatable>
        <binding>
          <command>property-toggle</command>
          <property>/controls/switches/kn-62a</property>
        </binding>
        <binding>
            <command>nasal</command>
            <script>c182s.click("kn62a")</script>
        </binding>
    </action>
    <action>
      <button>3</button>
      <repeatable>false</repeatable>
        <binding>
            <command>property-assign</command>
            <property>/controls/switches/kn-62a</property>
            <value>1</value>
        </binding>
        <binding>
            <command>nasal</command>
            <script>c182s.click("kn62a")</script>
        </binding>
    </action>
    <action>
      <button>4</button>
      <repeatable>false</repeatable>
        <binding>
            <command>property-assign</command>
            <property>/controls/switches/kn-62a</property>
            <value>0</value>
        </binding>
        <binding>
            <command>nasal</command>
            <script>c182s.click("kn62a")</script>
        </binding>
    </action>
    <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>kna62n-mode</tooltip-id>
                <label>Power: %s</label>
                <property>/controls/switches/kn-62a</property>
                <mapping>on-off</mapping>
            </binding>
        </hovered>
  </animation>
    
  
  <animation>
        <type>slider</type>
        <object-name>SwFunction</object-name>
        <object-name>SwFunction.CS</object-name>
        <property>/controls/switches/kn-62a-mode</property>
        <factor>0.001</factor>
        <axis>
            <x>0</x>
            <y>1</y>
            <z>0</z>
        </axis>
        <action>
            <binding>
                <command>property-cycle</command>
                <property>/controls/switches/kn-62a-mode</property>
                <value type="int">0</value>
                <value type="int">1</value>
                <value type="int">2</value>
                <wrap>false</wrap>
            </binding>
            <binding>
                <command>nasal</command>
                <script>c182s.click("kn62a")</script>
            </binding>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>kna62n-mode</tooltip-id>
                <label>Mode: %s</label>
                <property>/controls/switches/kn-62a-mode</property>
                <mapping>nasal</mapping>
                <script>
                    var modes = ['RMT (NAV1)', 'FREQ', 'GS/T'];
                    return modes[arg[0]];
                </script>
            </binding>
        </hovered>
    </animation>
  
  
  <animation>
    <type>knob</type>
    <object-name>Knob1</object-name>
    <property>/instrumentation/dme/knob1-pos</property>
    <axis>
        <x>1</x>
        <y>0</y>
        <z>0</z>
    </axis>
    <center>
        <x-m>0.0207</x-m>
        <y-m>0.063</y-m>
        <z-m>0.001</z-m>
    </center>
    <action>
        <binding>
            <condition>
                <and>
                    <property>/systems/electrical/outputs/dme</property>
                    <property>/controls/switches/kn-62a</property>
                    <equals>
                        <property>/controls/switches/kn-62a-mode</property>
                        <value>1</value>
                    </equals>
                </and>
            </condition>
            <command>property-adjust</command>
            <property>/instrumentation/dme/frequencies/selected-mhz-prev</property>
            <factor>1.0</factor>
            <mask>integer</mask>
            <min>108.00</min>
            <max>117.95</max>
            <wrap>true</wrap>
        </binding>
        <binding>
            <command>nasal</command>
            <script>c182s.click("kn62a-dial")</script>
        </binding>
        <binding>
            <command>property-adjust</command>
            <property>/instrumentation/dme/knob1-pos</property>
            <factor>-4</factor>
            <min>0</min>
            <max>360</max>
            <wrap>true</wrap>
        </binding>
    </action>
  </animation>
  
  <animation>
    <type>knob</type>
    <object-name>Knob2</object-name>
    <property>/instrumentation/dme/knob2-pos</property>
    <axis>
        <x>1</x>
        <y>0</y>
        <z>0</z>
    </axis>
    <center>
        <x-m>0.0207</x-m>
        <y-m>0.063</y-m>
        <z-m>0.001</z-m>
    </center>
    <action>
        <binding>
            <condition>
                <and>
                    <property>/systems/electrical/outputs/dme</property>
                    <property>/controls/switches/kn-62a</property>
                    <equals>
                        <property>/controls/switches/kn-62a-mode</property>
                        <value>1</value>
                    </equals>
                </and>
            </condition>
            <command>property-adjust</command>
            <property>/instrumentation/dme/frequencies/selected-mhz-prev</property>
            <factor>0.01</factor>
            <min>108.00</min>
            <max>117.95</max>
            <wrap>true</wrap>
        </binding>
        <binding>
            <command>nasal</command>
            <script>c182s.click("kn62a-dial")</script>
        </binding>
        <binding>
            <command>property-adjust</command>
            <property>/instrumentation/dme/knob2-pos</property>
            <factor>-4</factor>
            <min>0</min>
            <max>360</max>
            <wrap>true</wrap>
        </binding>
    </action>
    <shift-action>
        <binding>
            <condition>
                <and>
                    <property>/systems/electrical/outputs/dme</property>
                    <property>/controls/switches/kn-62a</property>
                    <equals>
                        <property>/controls/switches/kn-62a-mode</property>
                        <value>1</value>
                    </equals>
                </and>
            </condition>
            <command>property-adjust</command>
            <property>/instrumentation/dme/frequencies/selected-mhz-prev</property>
            <factor>0.05</factor>
            <min>108.00</min>
            <max>117.95</max>
            <wrap>true</wrap>
        </binding>
        <binding>
            <command>nasal</command>
            <script>c182s.click("kn62a-dial")</script>
        </binding>
        <binding>
            <command>property-adjust</command>
            <property>/instrumentation/dme/knob2-pos</property>
            <factor>4</factor>
            <min>0</min>
            <max>360</max>
            <wrap>true</wrap>
        </binding>
    </shift-action>
  </animation>
  
  <!--
  <animation>
    <type>knob</type>
