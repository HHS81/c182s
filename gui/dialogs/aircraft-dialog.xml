<PropertyList>

    <name>aircraft-dialog</name>
    <layout>vbox</layout>
    <resizable>false</resizable>
    <modal>false</modal>
    <draggable>true</draggable>


    <group>
        <layout>hbox</layout>

        <empty><stretch>true</stretch></empty>
        <text>
            <label>Aircraft Options</label>
        </text>
        <empty><stretch>true</stretch></empty>

        <button>
            <legend/>
            <key>Esc</key>
            <pref-width>16</pref-width>
            <pref-height>16</pref-height>
            <binding>
                <command>dialog-close</command>
            </binding>
	</button>
	</group>
	<hrule/>
    
	<group>
	<layout>vbox</layout>
	<padding>6</padding>
	<checkbox>
                <halign>left</halign>
                <label>Enable procedural-lights</label>
                <property>/sim/model/c182s/procedural-lights</property>
                <live>true</live>
                <binding>
                    <command>property-toggle</command><!-- dialog-apply would apply values to all objects here - setlistener reacts on them in unfortunate way-->
                <property>/sim/model/c182s/procedural-lights</property>
                </binding>
	<binding>
                    <command>dialog-update</command><!-- makes sure that command is still there when dialog is closed-->
                </binding>
	</checkbox>
    
            <checkbox>
                <halign>left</halign>
                <label>Complex engine procedures and failures</label>
                <property>/engines/engine/complex-engine-procedures</property>
                <live>true</live>
                <binding>
                    <command>dialog-apply</command>
                </binding>
            </checkbox>
            
            <group>
                <layout>hbox</layout>
                <!-- Small left padding -->
                <group>
                    <layout>vbox</layout>
                    <padding>6</padding>
                </group>

                <group>
                    <layout>hbox</layout>
                    <checkbox>
                        <halign>left</halign>
                        <label>  Allow Fuel Contamination</label>
                        <property>/engines/engine/allow-fuel-contamination</property>
                        <live>true</live>
                        <enable>
                            <and>
                                <property>/engines/engine/complex-engine-procedures</property>
                            </and>
                        </enable>
                        <binding>
                            <command>dialog-apply</command>
                        </binding>
                    </checkbox>
                </group>
                
                <empty><stretch>true</stretch></empty> <!-- force group to the left -->
            </group>
            
             <group>
                <layout>hbox</layout>
                <!-- Small left padding -->
                <group>
                    <layout>vbox</layout>
                    <padding>6</padding>
                </group>
                
                <group>
                    <layout>hbox</layout>
                    <checkbox>
                        <halign>left</halign>
                        <label>  Allow Oil Management</label>
                        <property>/engines/engine/allow-oil-management</property>
                        <live>true</live>
                        <enable>
                            <and>
                                <property>/engines/engine/complex-engine-procedures</property>
                            </and>
                        </enable>
                        <binding>
                            <command>dialog-apply</command>
                        </binding>
                    </checkbox>
                </group>
                
                <empty><stretch>true</stretch></empty> <!-- force group to the left -->
            </group>
            
                
        </group>
        
<hrule/>

        <group>
            <layout>hbox</layout>

            <!-- to be implemented
            <checkbox>
                <halign>left</halign>
                <label>Damage</label>
                <property>/fdm/jsbsim/settings/damage</property>
                <live>true</live>
                <binding>
                    <command>dialog-apply</command>
                </binding>
            </checkbox>-->

            <button>
                <halign>right</halign>
                <legend>Repair</legend>
                <pref-width>60</pref-width>
                <pref-height>28</pref-height>
                <enable>
                    <and>
                        <not>
                            <property>/sim/freeze/replay-state</property>
                        </not>
                        <less-than>
                            <property>velocities/groundspeed-kt</property>
                            <value>1.0</value>
                        </less-than>
                        <not>
                            <property>/engines/engine[0]/running</property>
                        </not>
                    </and>
                </enable>
                <binding>
                    <command>nasal</command>
                    <script>
                        c182s.repair_damage();
                        c182s.click("engine-repair", 6.0);
                    </script>
                </binding>
            </button>
        </group>

        <hrule/>


<group>
	<layout>hbox</layout>
	<padding>6</padding>
	<checkbox>
                <halign>left</halign>
                <label>add/ remove nose wheel fairing</label>
                <property>/sim/model/c182s/nw_fairing</property>
                <live>true</live>
                <binding>
                    <command>property-toggle</command><!-- dialog-apply would apply values to all objects here - setlistener reacts on them in unfortunate way-->
                <property>/sim/model/c182s/nw_fairing</property>
                </binding>
	<binding>
                    <command>dialog-update</command><!-- makes sure that command is still there when dialog is closed-->
                </binding>
	</checkbox>

	

	<checkbox>
                <halign>right</halign>
                <label>add/ remove main wheels fairing</label>
                <property>/sim/model/c182s/mw_fairing</property>
                <live>true</live>
                <binding>
                    <command>property-toggle</command><!-- dialog-apply would apply values to all objects here - setlistener reacts on them in unfortunate way-->
                <property>/sim/model/c182s/mw_fairing</property>
                </binding>
	<binding>
                    <command>dialog-update</command><!-- makes sure that command is still there when dialog is closed-->
                </binding>
	</checkbox>
        </group>
	<hrule/>
	
<group>
	<layout>vbox</layout>
	<padding>6</padding>
	<checkbox>
                <halign>left</halign>
                <label>Show/Hide Yokes</label>
                    <property>/sim/model/hide-yoke</property>
                <live>true</live>
                <binding>
                    <command>property-toggle</command>
                    <property>/sim/model/hide-yoke</property>
                </binding>
	<binding>
                    <command>dialog-update</command>
                </binding>
	</checkbox>

            <checkbox>
                <halign>left</halign>
                <label>Show shadow</label>
                <property>/sim/rendering/shadow-volume</property>
                <live>true</live>
                <binding>
                    <command>property-toggle</command>
                    <property>/sim/rendering/shadow-volume</property>
                </binding>
            </checkbox>
        </group>	
	
        <hrule/>

</PropertyList>
