<?xml version="1.0" encoding="UTF-8"?>

<!--
  Pointer 3000-11 ELT by B. Hallinger
  Uh, I'm bad at 3D modelling. Please replace this with something pretty :)

  Designed to work with the widespread "ELTmessage.nas" file provided in the instrument folder.
  Be sure to link the Nasal in your -set file, typing:
  <nasal>
    <ELT>
      <file>YOUR/INSTRUMENT/FOLDER/ROUTE/HERE/ELTmessage.nas</file>
    </ELT>
  </nasal>
  -->

<PropertyList>

  <path>Pointer3000-11_ELT.ac</path>

  <!--<effect>
      <inherits-from>../Effects/c182s_interior_radiance</inherits-from>
      <object-name>Face</object-name>
      <object-name>Cube</object-name>
      <object-name>Switch</object-name>
  </effect>-->
  
  <!-- hide face/texts because they are already on the panel texture -->
  <animation>
    <type>select</type>
    <object-name>Face</object-name>
    <condition>
          <equals>
              <value>0</value>
              <value>1</value>
          </equals>
      </condition>
  </animation>
  
  <animation>
        <type>material</type>
        <object-name>Switch</object-name>
        <condition>
            <equals>
                <property>instrumentation/elt/transmitting</property>
                <value>1</value>
            </equals>
        </condition>
        <emission>
            <red>1.0</red>
            <green>0.08</green>
            <blue>0.00005</blue>
            <factor-prop>instrumentation/elt/transmitting</factor-prop>
        </emission>
        <specular>
            <red>   0.0 </red>
            <green> 0.0 </green>
            <blue>  0.0 </blue>
        </specular>
        <ambient>
            <red>   1.0 </red>
            <green>1.0 </green>
            <blue>  1.0 </blue>
        </ambient>
        <diffuse>
            <red>   0.3 </red>
            <green> 0.3 </green>
            <blue>  0.3 </blue>
        </diffuse>
        <shininess>
            <red>   0 </red>
            <green> 0 </green>
            <blue>  0 </blue>
        </shininess>
    </animation>
	<animation>
        <type>material</type>
        <object-name>Face</object-name>
        <object-name>Cube</object-name>
        <object-name>Switch</object-name>
        <emission>
            <red>0.381924</red>
            <green>0.30935844</green>
            <blue>0.161171928</blue>
            <factor-prop>/systems/electrical/outputs/glareshield-lights-norm</factor-prop>
        </emission>
        <specular>
            <red>   0.0 </red>
            <green> 0.0 </green>
            <blue>  0.0 </blue>
        </specular>
        <ambient>
            <red>   1 </red>
            <green> 1 </green>
            <blue>  1 </blue>
        </ambient>
        <diffuse>
            <red>   0.3 </red>
            <green> 0.3 </green>
            <blue>  0.3 </blue>
        </diffuse>
        <shininess>
            <red>   0 </red>
            <green> 0 </green>
            <blue>  0 </blue>
        </shininess>
    </animation>
    

    <animation>
        <type>rotate</type>
        <object-name>Switch</object-name>
        <factor>10</factor>
        <property>instrumentation/elt/switchpos</property>
        <center>
            <x-m>0.003</x-m>
            <y-m>0.000</y-m>
            <z-m>0.000</z-m>
        </center>
        <axis>
            <x> 0</x>
            <y>-1</y>
            <z> 0</z>
        </axis>
    </animation>

  <animation>
    <type>pick</type>
    <object-name>SwitchUp</object-name>
    <visible>false</visible>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
            <condition>
                <equals>
                    <property>instrumentation/elt/switchpos</property>
                    <value>0</value>
                </equals>
            </condition>
            <command>property-assign</command>
            <property>instrumentation/elt/on</property>
            <value type="bool">true</value>
      </binding>
      <binding>
            <condition>
                <equals>
                    <property>instrumentation/elt/switchpos</property>
                    <value>0</value>
                </equals>
            </condition>
            <command>property-assign</command>
            <property>instrumentation/elt/armed</property>
            <value type="bool">true</value>
      </binding>
      <binding>
            <condition>
                <equals>
                    <property>instrumentation/elt/switchpos</property>
                    <value>0</value>
                </equals>
            </condition>
            <command>property-assign</command>
            <property>instrumentation/elt/switchpos</property>
            <value>1</value>
      </binding>
      
      <binding>
            <condition>
                <less-than>
                    <property>instrumentation/elt/switchpos</property>
                    <value>1</value>
                </less-than>
            </condition>
            <command>nasal</command>
            <script>c182s.click("elt")</script>
      </binding>
    </action>
    <hovered>
      <binding>
        <command>set-tooltip</command>
        <tooltip-id>elt-switch</tooltip-id>
        <label>ELT: %s</label>
        <property>instrumentation/elt/on</property>
        <mapping>nasal</mapping>
        <script>
          var m = getprop("/instrumentation/elt/on");
          if ( m ) return 'ON';
          return 'ARMED';
        </script>
      </binding>
    </hovered>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>SwitchDown</object-name>
    <visible>false</visible>
    <action>
      <button>0</button>
      <repeatable>false</repeatable> 
      
      <binding>
            <condition>
                <equals>
                    <property>instrumentation/elt/switchpos</property>
                    <value>1</value>
                </equals>
            </condition>
            <command>property-assign</command>
            <property>instrumentation/elt/on</property>
            <value type="bool">false</value>
      </binding>
      <binding>
            <condition>
                <equals>
                    <property>instrumentation/elt/switchpos</property>
                    <value>1</value>
                </equals>
            </condition>
            <command>property-assign</command>
            <property>instrumentation/elt/armed</property>
            <value type="bool">true</value>
      </binding>
      <binding>
            <condition>
                <equals>
                    <property>instrumentation/elt/switchpos</property>
                    <value>1</value>
                </equals>
            </condition>
            <command>property-assign</command>
            <property>instrumentation/elt/switchpos</property>
            <value>0</value>
      </binding>
      
      <binding>
            <condition>
                <equals>
                    <property>instrumentation/elt/switchpos</property>
                    <value>0</value>
                </equals>
            </condition>
            <command>property-assign</command>
            <property>instrumentation/elt/armed</property>
            <value type="bool">false</value>
      </binding>
      <binding>
            <condition>
                <equals>
                    <property>instrumentation/elt/switchpos</property>
                    <value>0</value>
                </equals>
            </condition>
            <command>property-assign</command>
            <property>instrumentation/elt/on</property>
            <value type="bool">false</value>
      </binding>
      <binding>
            <condition>
                <equals>
                    <property>instrumentation/elt/switchpos</property>
                    <value>0</value>
                </equals>
            </condition>
            <command>property-assign</command>
            <property>instrumentation/elt/switchpos</property>
            <value>-1</value>
      </binding>
      <mod-up>
        <binding>
            <condition>
                <equals>
                    <property>instrumentation/elt/switchpos</property>
                    <value>-1</value>
                </equals>
            </condition>
            <command>property-assign</command>
            <property>instrumentation/elt/armed</property>
            <value type="bool">true</value>
        </binding>
        <binding>
            <condition>
                <equals>
                    <property>instrumentation/elt/switchpos</property>
                    <value>-1</value>
                </equals>
            </condition>
            <command>property-assign</command>
            <property>instrumentation/elt/switchpos</property>
            <value>0</value>
        </binding>
      </mod-up>
      
      <binding>
            <condition>
                <greater-than>
                    <property>instrumentation/elt/switchpos</property>
                    <value>-1</value>
                </greater-than>
            </condition>
            <command>nasal</command>
            <script>c182s.click("elt")</script>
      </binding>
    </action>
    <hovered>
      <binding>
        <command>set-tooltip</command>
        <tooltip-id>elt-switch</tooltip-id>
        <label>ELT: %s</label>
        <property>instrumentation/elt/on</property>
        <mapping>nasal</mapping>
        <script>
          var m = getprop("/instrumentation/elt/on");
          if ( m ) return 'ON';
          return 'ARMED';
        </script>
      </binding>
    </hovered>
  </animation>



  <!-- TEXT OSG -->
  <text>
    <name>textosg</name>
    <type type="string">literal</type>
    <text type="string">ELT</text>
    <draw-text type="bool">true</draw-text>
    <font>Helvetica.txf</font>
    <character-size type="double">0.014</character-size>
    <character-aspect-ratio type="double">1.0</character-aspect-ratio>
    <axis-alignment>yz-plane</axis-alignment>
    <max-height>0.06</max-height>
    <max-width>0.04</max-width>
    <font-resolution>
      <width type="int">64</width>
      <height type="int">64</height>
    </font-resolution>
    <alignment>center-center</alignment>
    <offsets>
      <x-m>  0.008 </x-m>
      <y-m> -0.020 </y-m>
      <z-m>  0.005 </z-m>
    </offsets>
  </text>

  <animation>
    <type>material</type>
    <object-name>textosg</object-name>
    <emission>
      <red>   0.8 </red>
      <green> 0.8 </green>
      <blue>  0.0 </blue>
    </emission>
  </animation>

  <animation>
    <type>select</type>
    <object-name>textosg</object-name>
    <condition>
      <property>sim/panel-hotspots</property>
    </condition>
  </animation>

</PropertyList>
