        <value>1.0</value>
      </input>
      <input>
        <value>0.0</value>
      </input>
      <output>
        <property>/sim/model/c182s/lighting/adf</property>
      </output>
    </filter>

    <filter>
      <name>Transponder</name>
      <type>gain</type>
      <input>
        <condition>
          <greater-than>
              <property>/controls/switches/kt-76c</property>
              <value>0.0</value>
            </greater-than>
        </condition>
       <value>1.0</value>
      </input>
      <input>
        <value>0.0</value>
      </input>
      <output>
