<!-- Switches -->

<animation>
  <type>translate</type>
  <object-name>SwPower</object-name>
  <property>controls/switches/kn-62a</property>
  <interpolation>
    <entry><ind>0</ind><dep>0</dep></entry>
    <entry><ind>1</ind><dep>0.004</dep></entry>
  </interpolation>
  <axis>
    <x>0</x>
    <y>1</y>
    <z>0</z>
  </axis>
</animation>

<animation>
  <type>translate</type>
  <object-name>SwFunction</object-name>
  <property>controls/switches/kn-62a-mode</property>
  <interpolation>
    <entry><ind>0</ind><dep>-0.004</dep></entry>
    <entry><ind>1</ind><dep>0</dep></entry>
    <entry><ind>2</ind><dep>0.004</dep></entry>
  </interpolation>
  <axis>
    <x>0</x>
    <y>1</y>
    <z>0</z>
  </axis>
</animation>

<animation>
    <type>pick</type>
  <object-name>SwPower</object-name>
    <visible>true</visible>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
        <binding>
          <command>property-toggle</command>
          <property>/controls/switches/kn-62a</property>
        </binding>
        <binding>
            <command>nasal</command>
            <script>c182s.click("kn62a")</script>
        </binding>
    </action>
  </animation>
  
<animation>
    <type>pick</type>
 <object-name>SwFunction</object-name>   
 <visible>true</visible>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
        <binding>
          <command>property-adjust</command>
          <property>/controls/switches/kn-62a-mode</property>
          <step>1</step>
          <min>0</min>
          <max>2</max>
          <wrap>false</wrap>
        </binding>
        <binding>
            <command>nasal</command>
            <script>c182s.click("kn62a")</script>
        </binding>
    </action>
  </animation>
  
<animation>
    <type>pick</type>
 <object-name>SwFunction</object-name>   
 <visible>true</visible>
    <action>
      <button>1</button>
      <repeatable>false</repeatable>
        <binding>
          <command>property-adjust</command>
          <property>/controls/switches/kn-62a-mode</property>
          <step>-1</step>
          <min>0</min>
          <max>2</max>
          <wrap>false</wrap>
        </binding>
        <binding>
            <command>nasal</command>
            <script>c182s.click("kn62a")</script>
        </binding>
    </action>
  </animation>
  
<animation>
    <type>pick</type>
 <object-name>Knob1</object-name>   
 <visible>true</visible>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
        <binding>
          <condition>
            <and>
            <property>/systems/electrical/outputs/dme</property>
            <equals>
              <property>/controls/switches/kn-62a-mode</property>
              <value>1</value>
            </equals>
            </and>
          </condition>
          <command>property-adjust</command>
          <property>/instrumentation/dme/frequencies/selected-mhz</property>
          <step>1</step>
          <min>108</min>
          <max>117.95</max>
          <wrap>true</wrap>
        </binding>
        <binding>
            <command>nasal</command>
            <script>c182s.click("kn62a-dial")</script>
        </binding>
    </action>
  </animation>
  
<animation>
    <type>pick</type>
 <object-name>Knob1</object-name>   
 <visible>true</visible>
    <action>
