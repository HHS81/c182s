      </output>
    </filter>

    <filter>
      <name>DME</name>
      <type>gain</type>
      <input>
        <condition>
          <greater-than>
              <property>/controls/switches/kn-62a</property>
              <value>0.0</value>
            </greater-than>
        </condition>
        <property>/controls/lighting/radio-lights-norm</property>
      </input>
      <input>
        <value>0.0</value>
      </input>
      <output>
        <property>/sim/model/c182s/lighting/dme-norm</property>
      </output>
    </filter>

    <filter>
      <name>NAV 1</name>
      <type>gain</type>
      <input>
        <condition>
          <greater-than>
              <property>/instrumentation/nav[0]/power-btn</property>
              <value>0.0</value>
            </greater-than>
        </condition>
        <property>/controls/lighting/radio-lights-norm</property>
      </input>
      <input>
        <value>0.0</value>
      </input>
      <output>
