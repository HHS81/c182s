<?xml version="1.0"?>

<PropertyList>

    <name>c182s-pax-dialog</name>
    <layout>vbox</layout>
    <resizable>true</resizable>
    <modal>false</modal>
    <draggable>true</draggable>
<!--    <pref-width>600</pref-width>
    <pref-height>600</pref-height>-->

    <group>
        <layout>hbox</layout>
        <empty> <stretch>true</stretch> </empty>
        <text>
            <label>Passenger and Crew</label>
        </text>
        <empty> <stretch>true</stretch> </empty>
        <button>
            <legend>X</legend>
            <key>Esc</key>
            <halign>right</halign>
            <pref-width>20</pref-width>
            <pref-height>20</pref-height>
            <binding>
                <command>dialog-close</command>
            </binding>
        </button>
    </group>

    <hrule/>

    <group>
        <layout>hbox</layout>
        
        <!-- Pilot config -->
        <group>
            <layout>vbox</layout>
            <valign>top</valign>
            <halign>left</halign>
            <padding>6</padding>
            
            <text>
                <label>Pilot</label>
            </text>
            <group>
                <layout>hbox</layout>

                <text>
                    <label>Weight:</label>
                    <halign>right</halign>
                </text>
                <slider>
                    <name>c182s-pilot0-slider</name>
                    <min>0</min>
                    <max>300.0</max>
                    <live>true</live>
                    <property>payload/weight[0]/weight-lb</property>
                    <binding>
                        <command>dialog-apply</command>
                        <name>c182s-pilot0-slider</name>
                    </binding>
                </slider>
                <group>
                    <layout>hbox</layout>
                    <padding>6</padding>
                    <text>
                        <label>123.00 lbs</label>
                        <halign>left</halign>
                        <format>%.0f lbs</format>
                        <live>true</live>
                        <property>payload/weight[0]/weight-lb</property>
                    </text>
                </group>
            </group>

            <!-- nothing else supported by that model it looks like -->
        </group>

        <vrule/>

        <!-- Copilot config -->
        <group>
