<?xml version="1.0"?>

<PropertyList>

    <default>

        <menu n="10">
            <label>Cessna C182</label>
            <enabled type="bool">true</enabled>
            
            <item>
                <label>Autostart / States</label>
                <binding>
                    <command>dialog-show</command>
                    <dialog-name>c182s-states-dialog</dialog-name>
                </binding>
            </item>

<item>
                <label>Aircraft Options</label>
                <binding>
                    <command>dialog-show</command>
                    <dialog-name>aircraft-dialog</dialog-name>
                </binding>
            </item>
	    
	<item>
                <label>Aircraft Securing</label>
                <binding>
                    <command>dialog-show</command>
                    <dialog-name>securing</dialog-name>
                </binding>
            </item>
	    
	<item>
                <label>Ground Equipement</label>
                <binding>
                    <command>dialog-show</command>
                    <dialog-name>ground-equipement</dialog-name>
                </binding>
            </item>
	    


            <item>
                <label>Select Livery</label>
                <binding>
                    <command>nasal</command>
                    <script>aircraft.livery.dialog.toggle()</script>
                </binding>
            </item>
	    


            <item>
                <label>Registration</label>
                <binding>
                    <command>dialog-show</command>
                    <dialog-name>registration-dialog</dialog-name>
                </binding>
            </item>
            
            <item>
                <!-- TODO: can be removed, once the walker flashlight is merged into fgdata;
                           see https://sourceforge.net/p/flightgear/codetickets/2853/ -->
                <label>Flashlight</label>
                <binding>
                    <command>property-cycle</command>
                    <property>/sim/walker/flashlight/mode</property>
                    <value type="int">0</value> <!-- off -->
                    <value type="int">1</value> <!-- white -->
                    <value type="int">2</value> <!-- red -->
                </binding>
            </item>

	    <item>
                <label>Fuel/Oil management</label>
                <binding>
                    <command>dialog-show</command>
                    <dialog-name>fuelmgmt-dialog</dialog-name>
                </binding>
            </item>
            
            <item>
                <label>Aircraft Failure Management</label>
                <binding>
                    <command>dialog-show</command>
                    <dialog-name>extended-failure-dialog-c182</dialog-name>
                </binding>
            </item>
            

            <item n="150">
                <label>------------------</label>
                <enabled>false</enabled>
            </item>
            
            <item n="151">
                <label>About This Aircraft</label>
                <binding>
                    <command>dialog-show</command>
                    <dialog-name>c182-about-dialog</dialog-name>
                </binding>
            </item>

        </menu>

    </default>

</PropertyList>
