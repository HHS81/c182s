        </condition>
        <value>1.0</value>
      </input>
      <input>
        <value>0.0</value>
      </input>
      <output>
        <property>/sim/model/c182s/lighting/nav-2</property>
      </output>
    </filter>

    <filter>
      <name>ADF</name>
      <type>gain</type>
      <input>
        <condition>
