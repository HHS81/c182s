    <!-- Nav1, Nav2, ADF, AP and Trans button lights -->
    <filter>
      <name>Instrument Stack Button Lights</name>
      <type>gain</type>
      <input>
        <condition>
          <greater-than>
              <property>/controls/lighting/radio-lights-norm</property>
              <value>0.0</value>
            </greater-than>
        </condition>
