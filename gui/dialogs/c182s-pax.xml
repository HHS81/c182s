                        <format>%.0f lbs</format>
                        <live>true</live>
                        <property>payload/weight[1]/weight-lb</property>
                    </text>
                </group>
            </group>
            <checkbox>
                <halign>left</halign>
                <label>Female</label>
                <property>sim/model/crew/pilot[1]/gender</property>
                <live>true</live>
                <binding>
                    <command>property-toggle</command>
                    <property>sim/model/crew/pilot[1]/gender</property>
                    <value>0</value>
                    <value>1</value>
                </binding>
                <binding>
                    <command>dialog-update</command>
                </binding>
            </checkbox>
            <checkbox>
                <halign>left</halign>
                <label>Eyeshades</label>
                <property>sim/model/crew/pilot[1]/eyewear</property>
                <live>true</live>
                <binding>
                    <command>property-toggle</command>
                    <property>sim/model/crew/pilot[1]/eyewear</property>
                    <value>0</value>
                    <value>1</value>
                </binding>
                <binding>
                    <command>dialog-update</command>
                </binding>
            </checkbox>
            <group>
                <layout>hbox</layout>
                <halign>left</halign>
                <combo>
                    <stretch>true</stretch>
                    <pref-width>50</pref-width>
                    <property>sim/model/crew/pilot[1]/headgear</property>
                    <live>true</live>
                    <binding>
                        <command>dialog-apply</command>
                    </binding>
                    <value>0</value>
                    <value>1</value>
                    <value>2</value>
                </combo>
                <text>
                    <label>Headgear</label>
                </text>
            </group>
            <group>
                <layout>hbox</layout>
                <halign>left</halign>
                <combo>
                    <halign>left</halign>
                    <stretch>true</stretch>
                    <pref-width>50</pref-width>
                    <property>sim/model/crew/pilot[1]/hair</property>
                    <live>true</live>
                    <binding>
                        <command>dialog-apply</command>
                    </binding>
                    <value>0</value>
                    <value>1</value>
                    <value>2</value>
                </combo>
                <text>
                    <label>Hair</label>
                    <halign>left</halign>
                </text>
            </group>
            <group>
                <layout>hbox</layout>
                <halign>left</halign>
                <combo>
                    <halign>left</halign>
                    <stretch>true</stretch>
                    <pref-width>50</pref-width>
                    <property>sim/model/crew/pilot[1]/outfit</property>
                    <live>true</live>
                    <binding>
                        <command>dialog-apply</command>
                    </binding>
                    <value>0</value>
                    <value>1</value>
                    <value>2</value>
                    <value>3</value>
                    <value>4</value>
                </combo>
                <text>
                    <label>Outfit</label>
                    <halign>left</halign>
                </text>
            </group>
             <group>
                <layout>hbox</layout>
                <halign>left</halign>
                <combo>
                    <halign>left</halign>
                    <stretch>true</stretch>
                    <pref-width>50</pref-width>
                    <property>sim/model/crew/pilot[1]/character</property>
                    <live>true</live>
                    <binding>
                        <command>dialog-apply</command>
                    </binding>
                    <value>0</value>
                    <value>1</value>
                    <value>2</value>
                    <value>3</value>
                    <value>4</value>
                </combo>
                <text>
                    <label>Character</label>
                    <halign>left</halign>
                </text>
            </group>
        </group>
    </group>
        
