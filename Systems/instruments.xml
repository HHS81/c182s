    <filter>
      <name>Audio Panel</name>
      <type>gain</type>
      <input>
        <condition>
          <greater-than>
              <property>/instrumentation/audio-panel/volume-ics-pilot</property>
              <value>0.0</value>
            </greater-than>
        </condition>
        <value>1.0</value>
      </input>
      <input>
        <value>0.0</value>
      </input>
      <output>
        <property>/sim/model/c182s/lighting/audio-panel</property>
      </output>
    </filter>

