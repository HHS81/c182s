<?xml version="1.0" encoding="ISO-8859-1"?>
<!-- gratefully taken from c172p model -->

<PropertyList>

    <path>immat.ac</path>

    <animation>
        <!-- Immatriculations -->
        <object-name>ImatWingLeft</object-name>
        <object-name>ImmatFuselageLeft</object-name>
        <object-name>ImmatFuselageRight</object-name>

        <object-name>ImatPanel1</object-name>
        <object-name>ImatPanel2</object-name>
        <object-name>ImatPanel3</object-name>
        <object-name>ImatPanel4</object-name>
        <object-name>ImatPanel5</object-name>
        <object-name>ImatPanel6</object-name>
    </animation>
    <animation>
        <type>noshadow</type>
        <object-name>ImatWingLeft</object-name>
        <object-name>ImmatFuselageLeft</object-name>
        <object-name>ImmatFuselageRight</object-name>
        
        <object-name>ImatPanel1</object-name>
        <object-name>ImatPanel2</object-name>
        <object-name>ImatPanel3</object-name>
        <object-name>ImatPanel4</object-name>
        <object-name>ImatPanel5</object-name>
        <object-name>ImatPanel6</object-name>
        <object-name>ImatPanelBack</object-name>
    </animation>


    <!-- Label inside the cockpit -->
    <animation>
        <type>textranslate</type>
        <object-name>ImatPanel1</object-name>
        <property>sim/model/c182s/regnum1</property>
        <factor> 0.0244140625 </factor>
        <axis>
            <x> 1 </x>
            <y> 0 </y>
            <z> 0 </z>
        </axis>
    </animation>

    <animation>
        <type>textranslate</type>
        <object-name>ImatPanel2</object-name>
        <property>sim/model/c182s/regnum2</property>
        <factor> 0.0244140625 </factor>
        <axis>
            <x> 1 </x>
            <y> 0 </y>
            <z> 0 </z>
        </axis>
    </animation>

    <animation>
        <type>textranslate</type>
        <object-name>ImatPanel3</object-name>
        <property>sim/model/c182s/regnum3</property>
        <factor> 0.0244140625 </factor>
        <axis>
            <x> 1 </x>
            <y> 0 </y>
            <z> 0 </z>
        </axis>
    </animation>

    <animation>
        <type>textranslate</type>
        <object-name>ImatPanel4</object-name>
        <property>sim/model/c182s/regnum4</property>
        <factor> 0.0244140625 </factor>
        <axis>
            <x> 1 </x>
            <y> 0 </y>
            <z> 0 </z>
        </axis>
    </animation>

    <animation>
        <type>textranslate</type>
        <object-name>ImatPanel5</object-name>
        <property>sim/model/c182s/regnum5</property>
        <factor> 0.0244140625 </factor>
        <axis>
            <x> 1 </x>
            <y> 0 </y>
            <z> 0 </z>
        </axis>
    </animation>

    <animation>
        <type>textranslate</type>
        <object-name>ImatPanel6</object-name>
        <property>sim/model/c182s/regnum6</property>
        <factor> 0.0244140625 </factor>
        <axis>
            <x> 1 </x>
            <y> 0 </y>
            <z> 0 </z>
        </axis>
    </animation>

    <animation>
        <type>select</type>
        <object-name>ImmatFuselageLeft</object-name>
        <object-name>ImmatFuselageRight</object-name>
        <object-name>ImmatWingLeft</object-name>
        <condition>
            <property>sim/model/c182s/immat</property>
            <not><property>sim/model/c182s/securing/plane-cover-visible</property></not>
        </condition>
    </animation>

    <animation>
        <type>select</type>
        <object-name>ImatPanel1</object-name>
        <object-name>ImatPanel2</object-name>
        <object-name>ImatPanel3</object-name>
        <object-name>ImatPanel4</object-name>
        <object-name>ImatPanel5</object-name>
        <object-name>ImatPanel6</object-name>
        <object-name>ImatPanelBack</object-name>
        <condition>
            <property>sim/model/c182s/immat-on-panel</property>
        </condition>
    </animation>
    
    <animation>
        <type>material</type>
        <object-name>ImatPanel1</object-name>
        <object-name>ImatPanel2</object-name>
        <object-name>ImatPanel3</object-name>
        <object-name>ImatPanel4</object-name>
        <object-name>ImatPanel5</object-name>
        <object-name>ImatPanel6</object-name>
        <emission>
        <red>0.8</red>
        <green>0.8</green>
        <blue>0.8</blue>
        <factor-prop>/systems/electrical/outputs/glareshield-lights-norm</factor-prop>
        </emission>
        <specular>
            <red>   0.0 </red>
            <green> 0.0 </green>
            <blue>  0.0 </blue>
        </specular>
        <ambient>
            <red>   1 </red>
            <green> 1 </green>
            <blue>  1 </blue>
        </ambient>
        <diffuse>
            <red>   0.3 </red>
            <green> 0.3 </green>
            <blue>  0.3 </blue>
        </diffuse>
        <shininess>
            <red>   0 </red>
            <green> 0 </green>
            <blue>  0 </blue>
        </shininess>
    </animation>
    <animation>
        <type>material</type>
        <object-name>ImatPanelBack</object-name>
        <emission>
        <red>0.1</red>
        <green>0.1</green>
        <blue>0.1</blue>
        <factor-prop>/systems/electrical/outputs/glareshield-lights-norm</factor-prop>
        </emission>
    </animation>

</PropertyList>
