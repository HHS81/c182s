                </greater-than>
            </condition>
            <property>/engines/engine/oil-final-temperature-degf</property>
        </input>
        <input>
            <value>0.0</value>
        </input>
        <output>
            <property>/engines/engine/indicated-oil-final-temperature-degf</property>
        </output>
    </filter>

