<PropertyList>

    <name>aircraft-dialog</name>
    <layout>vbox</layout>
    <resizable>false</resizable>
    <modal>false</modal>
    <draggable>true</draggable>


    <group>
        <layout>hbox</layout>

        <empty><stretch>true</stretch></empty>
        <text>
            <label>Aircraft Options</label>
        </text>
        <empty><stretch>true</stretch></empty>

        <button>
            <legend/>
            <key>Esc</key>
            <pref-width>16</pref-width>
            <pref-height>16</pref-height>
            <binding>
                <command>dialog-close</command>
            </binding>
	</button>
	</group>
	<hrule/>
    
	<group>
	<layout>vbox</layout>
	<padding>6</padding>
	<checkbox>
                <halign>left</halign>
                <label>Enable procedural-lights</label>
                <property>/sim/model/c182/procedural-lights</property>
                <live>true</live>
                <binding>
                    <command>dialog-apply</command>
                </binding>
	</checkbox>
        </group>
        <hrule/>

       
</PropertyList>
