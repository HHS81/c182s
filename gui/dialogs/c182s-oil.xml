<?xml version="1.0"?>

<PropertyList>

    <name>c182s-oilmanagement-dialog</name>
    <layout>vbox</layout>
    <resizable>false</resizable>
    <modal>false</modal>
    <draggable>true</draggable>

    <group>
        <layout>hbox</layout>
        <empty>
            <stretch>true</stretch>
        </empty>
        <text>
            <label>Oil Level</label>
        </text>
        <empty>
            <stretch>true</stretch>
        </empty>
        <button>
            <legend/>
            <key>Esc</key>
            <pref-width>16</pref-width>
            <pref-height>16</pref-height>
            <binding>
                <command>dialog-close</command>
            </binding>
        </button>
    </group>

    <hrule/>
    
    <group>
        <layout>vbox</layout>
        <padding>6</padding>
        <empty><stretch>true</stretch></empty>
        <group>
            <layout>hbox</layout>
            <text>
                <label>Oil Level:</label>
                <halign>right</halign>
            </text>
            <slider>                
                <name>c182s-oil-slider</name>
                <min>0</min>
                <max>9.0</max>
                <live>true</live>
                <enable>
                    <and>
                        <or>
                            <property>/fdm/jsbsim/gear/unit[1]/WOW</property>
                            <property>/fdm/jsbsim/gear/unit[19]/WOW</property>
                            <property>/fdm/jsbsim/gear/unit[23]/WOW</property>
                            <property>/fdm/jsbsim/hydro/active-norm</property>
                        </or>
                        <not>
                            <property>/engines/engine/running</property>
                        </not>
                    </and>
                </enable>
                <property>/engines/engine[0]/oil-level</property>
                <binding>
                    <command>dialog-apply</command>
                    <name>c182s-oil-slider</name>
                </binding>
                <binding>
                    <command>nasal</command>
                    <script>c182s.oil_refill();</script>
                </binding>
            </slider>
            <group>
                <layout>hbox</layout>
                <padding>6</padding>
                <text>
                    <label>123</label>
                    <halign>left</halign>
                    <format>%.2f</format>
                    <live>true</live>
                    <property>/engines/engine[0]/oil-level</property>
                </text>
                <text>
                    <label>quarts</label>
                    <halign>left</halign>
                </text>
            </group>
        </group>
    </group>
    
    <group>
        <layout>hbox</layout>
        <padding>6</padding>
        <text>
            <label>Oil grade: </label>
            <halign>left</halign>
        </text>
        <combo>
            <halign>left</halign>
            <stretch>true</stretch>
            <pref-width>150</pref-width>
            <property>/engines/engine[0]/oil-grade</property>
            <enable>
                    <and>
                        <or>
                            <property>/fdm/jsbsim/gear/unit[1]/WOW</property>
                            <property>/fdm/jsbsim/gear/unit[19]/WOW</property>
                            <property>/fdm/jsbsim/gear/unit[23]/WOW</property>
                            <property>/fdm/jsbsim/hydro/active-norm</property>
                        </or>
                        <not>
                            <property>/engines/engine/running</property>
                        </not>
                    </and>
                </enable>
            <binding>
                <command>dialog-apply</command>
            </binding>
            <binding>
                <command>nasal</command>
                <script>
                    # change oil when oil grade changes
                    var t = 1;
                    interpolate ("/engines/engine[0]/oil-level", 0, t);
                    settimer(func(){
                        setprop("/engines/engine[0]/oil-service-hours", 0.0);
                        interpolate ("/engines/engine[0]/oil-level", 8, t)
                    }, t);
                </script>
            </binding>
            <!-- values as defined per engine.xml / specs in POH 8-14 -->
            <value>SAE 30</value>
            <!-- not approved: <value>10W-40</value> -->
            <!-- not approved: <value>10W-60</value> -->
            <!-- not approved: <value>15W-40</value> -->
            <value>15W-50</value> <!-- default oil if not set -->
        </combo>
    </group>
    
    <group>
        <layout>hbox</layout>
        <padding>6</padding>
        <text>
            <label>Oil in service (hrs): </label>
            <halign>left</halign>
        </text>
        <text>
            <label>123</label>
            <halign>left</halign>
            <format>%d</format>
            <live>true</live>
            <property>/engines/engine[0]/oil-service-hours</property>
        </text>
    </group>
            
    <group>
        <layout>table</layout>
        <text>
            <row>0</row>
            <col>0</col>
            <visible>
                <and>
                    <or>
                        <property>/fdm/jsbsim/gear/unit[1]/WOW</property>
                        <property>/fdm/jsbsim/gear/unit[19]/WOW</property>
                        <property>/fdm/jsbsim/gear/unit[23]/WOW</property>
                        <property>/fdm/jsbsim/hydro/active-norm</property>
                    </or>
                    <property>/engines/engine/running</property>
                </and>
            </visible>
            <color>
                <red>0.9</red>
                <green>0.1</green>
                <blue>0.1</blue>
            </color>
            <label>Oil changes disabled while engine is running!</label>
        </text>
        <text>
            <row>0</row>
            <col>0</col>
            <visible>
                <not>
                    <or>
                        <property>/fdm/jsbsim/gear/unit[1]/WOW</property>
                        <property>/fdm/jsbsim/gear/unit[19]/WOW</property>
                        <property>/fdm/jsbsim/gear/unit[23]/WOW</property>
                        <property>/fdm/jsbsim/hydro/active-norm</property>
                    </or>
                </not>
            </visible>
            <color>
                <red>0.9</red>
                <green>0.1</green>
                <blue>0.1</blue>
            </color>
            <label>Oil changes disabled while in the air!</label>
        </text>
    </group>
    
    <hrule/>
    
    <group>
        <layout>table</layout>
        <text>
            <row>0</row>
            <col>0</col>
            <visible>
                <greater-than>
                    <property>/engines/engine[0]/oil-level</property>
                    <value>6.0</value>
                </greater-than>
            </visible>
            <label>Good oil level</label>
        </text>
        <text>
            <row>0</row>
            <col>0</col>
            <visible>
                <and>
                    <less-than-equals>
                        <property>/engines/engine[0]/oil-level</property>
                        <value>6.0</value>
                    </less-than-equals>
                    <greater-than>
                        <property>/engines/engine[0]/oil-level</property>
                        <value>4.0</value>
                    </greater-than>
                </and>
            </visible>
            <color>
                <red>0.9</red>
                <green>0.74</green>
                <blue>0.23</blue>
            </color>
            <label>Low oil level</label>
        </text>
        <text>
            <row>0</row>
            <col>0</col>
            <visible>
                <less-than-equals>
                    <property>/engines/engine[0]/oil-level</property>
                    <value>4.0</value>
                </less-than-equals>
            </visible>
            <color>
                <red>0.95</red>
                <green>0.0</green>
                <blue>0.0</blue>
            </color>
            <label>Critical oil level!</label>
        </text>
    </group>
        
    <hrule/>

    <group>
        <layout>hbox</layout>
        <default-padding>6</default-padding>
        <empty><stretch>true</stretch></empty>
        <button>
            <legend>Close</legend>
            <equal>true</equal>
            <key>Esc</key>
            <default>true</default>
            <binding>
                <command>dialog-close</command>
            </binding>
        </button>
    </group>

</PropertyList>
