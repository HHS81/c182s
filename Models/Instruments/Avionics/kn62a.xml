  <factor>0.1</factor>
  <step>1</step>
  <axis>
    <x>0</x>
    <y>1</y>
    <z>0</z>
  </axis>
</animation>
<animation>
  <type>textranslate</type>
  <object-name>NavDigit4</object-name>
  <property>/instrumentation/dme/frequencies/display-sel-khz</property>
  <factor>0.01</factor>
  <step>10</step>
  <axis>
    <x>0</x>
